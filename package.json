{
  "name": "jobnearme-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "JobNearMe - A location-based job search application",
  "author": "Samir Ibourki",
  "license": "ISC",
  "scripts": {
    "install": "pnpm install",
    "dev": "pnpm run --parallel dev",
    "dev:frontend": "pnpm --filter frontend dev",
    "dev:backend": "pnpm --filter backend dev",
    "start:backend": "pnpm --filter backend start",
    "start:frontend": "pnpm --filter frontend start",
    "android": "pnpm --filter frontend android",
    "ios": "pnpm --filter frontend ios",
    "web": "pnpm --filter frontend web",
    "backend": "pnpm --filter backend start",
    "lint": "pnpm run --parallel lint",
    "lint:frontend": "pnpm --filter frontend lint",
    "test": "pnpm run --parallel test",
    "test:backend": "pnpm --filter backend test",
    "clean": "pnpm --filter frontend clean && pnpm --filter backend clean",
    "clean:all": "rm -rf node_modules frontend/node_modules backend/node_modules pnpm-lock.yaml"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
